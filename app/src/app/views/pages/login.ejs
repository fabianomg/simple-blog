<%- contentFor('stylesheet') %>
<link rel="stylesheet" href="/css/form.css">

<%- contentFor('body') %>

<% const messages = getMessages() %>

<% if (messages.loginError) { %>
<ul class="error">
  <% messages.loginError.forEach(error => { %>
    <li><%= error %></li>
  <% }) %>
</ul>
<% } %>

<div class="flex">
  <form action="/login" class="form-login" method="post">
    <legend>Login now!</legend>
    <input
      type="email"
      id="email"
      name="email"
      maxlength="255"
      placeholder="example@email.com"
      <% if (messages.email) { %>
        value=<%= messages.email %>
      <% } %>
      autofocus
      required>
    <br>
    <input
      type="password"
      id="password"
      name="password"
      minlength="5"
      maxlength="12"
      placeholder="type your password"
      required>
    <br>
    <input
      type="submit"
      class="btn btn-login"
      value="Sign in">
    <br>
    <div class="link">
      Not have an account yet?&nbsp;
      <a href="/register">Sign Up</a>
    </div>
  </form>
</div>
